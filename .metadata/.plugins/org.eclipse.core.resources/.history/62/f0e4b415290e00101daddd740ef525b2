package stepdef1;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.When;
import utilities.common_methods;

public class Checkout extends common_methods {
	@Given("Click checkout")
	public void checkout() {
		dr.findElement(By.id("termsofservice")).click();
		dr.findElement(By.id("checkout")).click();
		
	}
	
	@When("User Fill the Billing address")
	public void fill_bill_address() {
		dr.findElement(By.id("BillingNewAddress_Company")).sendKeys("hello");
		WebElement w1 = dr.findElement(By.name("BillingNewAddress.CountryId"));
		Select s = new Select(w1);
		s.selectByVisibleText("India");
		
		dr.findElement(By.id("BillingNewAddress.City")).sendKeys("Bangalore");
		dr.findElement(By.id("BillingNewAddress.Address1")).sendKeys("mayilachandra");
		dr.findElement(By.id("BillingNewAddress_ZipPostalCode")).sendKeys("12345");
		dr.findElement(By.id("BillingNewAddress_PhoneNumber")).sendKeys("1234567890");
		
		
	}
	
	@When("User confirm the order")
	public void confirm_order() {
		dr.findElement(By.xpath("//div[@id='shipping-buttons-container']//input")).click();
		dr.findElement(By.xpath("//div[@id='shipping-method-buttons-container']//input")).click();
		dr.findElement(By.xpath("//div[@id='payment-method-buttons-container']//input")).click();
		dr.findElement(By.xpath("//div[@id='payment-info-buttons-containerr']//input")).click();
		
		dr.findElement(By.xpath("//input[@class='button-1 confirm-order-next-step-button']")).click();
	}
	
	@When("the product ordered")
	public void ordered_product() {
		
	}
	
	
}
